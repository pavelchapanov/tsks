            height: 30px;
        }

        .search-box {
            flex: 1 1 100%;
            min-width: 0;
            border: 1px solid var(--color-border);
            background-color: var(--color-surface);
        }

        @media (min-width: 600px) {
            .search-box {
                flex: 1 1 auto;
                min-width: 240px;
            }
        }

        .btn-toolbar {
            border: none;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: var(--space-4);
            white-space: nowrap;
            background-color: var(--color-primary);
            color: white;
            padding-inline: 18px;
        }

        .btn-toolbar:hover { background-color: var(--color-primary-hover); }

        .sort-buttons {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            gap: 8px;
            font-size: 11px;
        }

        .sort-btn {
            background-color: var(--color-surface);
            border: 1px solid var(--color-border);
            cursor: pointer;
        }

        .sort-btn.active {
            background-color: var(--color-primary);
            color: white;
            border-color: var(--color-primary);
        }

        .table-wrapper {
            padding-bottom: 70px;
        }

        .cards-view {
            display: grid;
            grid-template-columns: 1fr;
            gap: var(--space-6);
        }

        @media (min-width: 768px) {
            .cards-view {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .task-card {
            background-color: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-base);
