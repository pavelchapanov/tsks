<body>
<div class="container">
    <header>
        <h1>üìã –ó–∞–¥–∞—á–∏</h1>
    </header>

    <!-- ====== –ê–í–¢–û–†–ò–ó–ê–¶–ò–Ø ====== -->
    <div class="auth-card">
        <div class="auth-header">
            <div>–í—Ö–æ–¥ –ø–æ –ø–æ—á—Ç–µ</div>
            <div class="auth-status" id="authStatus">–ù–µ –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω</div>
        </div>
        <form class="auth-form" id="authForm">
            <input type="email" id="authEmail" placeholder="Email" required>
            <input type="password" id="authPassword" placeholder="–ü–∞—Ä–æ–ª—å" required>
            <button type="submit" class="btn btn-primary" id="loginBtn">–í–æ–π—Ç–∏</button>
            <button type="button" class="btn btn-ghost" id="registerBtn">–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è</button>
            <button type="button" class="btn btn-ghost" id="logoutBtn" style="display:none;">–í—ã–π—Ç–∏</button>
        </form>
        <div class="auth-error" id="authMessage"></div>
    </div>

    <!-- ====== –ü–ê–ù–ï–õ–¨ –ò –°–ü–ò–°–û–ö –ó–ê–î–ê–ß (–ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Ç–æ–ª—å–∫–æ –∫–æ–≥–¥–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤–æ—à—ë–ª) ====== -->
    <div id="appContent" style="display:none;">
        <div class="toolbar">
            <input type="text" class="search-box" id="searchBox" placeholder="–ü–æ–∏—Å–∫...">
            <button class="btn-toolbar" id="addTaskBtn">‚ûï –ù–æ–≤–∞—è</button>
            <div class="sort-buttons">
                <button class="sort-btn" onclick="sortTasks('deadline')">–°—Ä–æ–∫</button>
                <button class="sort-btn" onclick="sortTasks('priority')">–ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç</button>
                <button class="sort-btn" onclick="sortTasks('budget')">–ë—é–¥–∂–µ—Ç</button>
                <button class="sort-btn" onclick="sortTasks('payment')">–û–ø–ª–∞—Ç–∞</button>
            </div>
        </div>

        <div class="table-wrapper">
            <div class="cards-view" id="tasksList"></div>
        </div>

        <div class="total-budget">
            –í—Å–µ–≥–æ –±—é–¥–∂–µ—Ç–∞: <span id="totalBudget">0 –†</span>
        </div>
    </div>
</div>

<!-- Firebase SDK —á–µ—Ä–µ–∑ ES Modules -->
<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js";
    import {
        getAuth,
        onAuthStateChanged,
        signInWithEmailAndPassword,
        createUserWithEmailAndPassword,
        signOut
    } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-auth.js";

    // TODO: –ø–æ–¥—Å—Ç–∞–≤—å —Å—é–¥–∞ —Å–≤–æ–π firebaseConfig –∏–∑ –∫–æ–Ω—Å–æ–ª–∏ Firebase
    const firebaseConfig = {
        apiKey: "YOUR_API_KEY",
        authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
        projectId: "YOUR_PROJECT_ID",
        // –æ—Å—Ç–∞–ª—å–Ω–æ–µ –ø–æ –∂–µ–ª–∞–Ω–∏—é
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    // ====== DOM —ç–ª–µ–º–µ–Ω—Ç–æ–≤ ======
    const authForm = document.getElementById('authForm');
    const authEmail = document.getElementById('authEmail');
    const authPassword = document.getElementById('authPassword');
    const loginBtn = document.getElementById('loginBtn');
    const registerBtn = document.getElementById('registerBtn');
    const logoutBtn = document.getElementById('logoutBtn');
    const authMessage = document.getElementById('authMessage');
    const authStatus = document.getElementById('authStatus');
    const appContent = document.getElementById('appContent');

    let currentUser = null;
    let tasks = [];
    let currentSort = null;

    // ====== –ê–í–¢–û–†–ò–ó–ê–¶–ò–Ø ======

    onAuthStateChanged(auth, (user) => {
        currentUser = user;
        if (user) {
            authStatus.textContent = `–í–æ—à—ë–ª: ${user.email}`;
            authStatus.classList.add('auth-ok');
            logoutBtn.style.display = 'inline-flex';
            appContent.style.display = 'block';
            authMessage.textContent = '';
            loadTasksForUser();
        } else {
            authStatus.textContent = '–ù–µ –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω';
            authStatus.classList.remove('auth-ok');
            logoutBtn.style.display = 'none';
            appContent.style.display = 'none';
            tasks = [];
        }
    });

    authForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        authMessage.textContent = '';
        const email = authEmail.value.trim();
        const password = authPassword.value.trim();
        try {
            await signInWithEmailAndPassword(auth, email, password);
        } catch (err) {
            authMessage.textContent = '–û—à–∏–±–∫–∞ –≤—Ö–æ–¥–∞: ' + (err.message || '');
        }
    });

    registerBtn.addEventListener('click', async () => {
        authMessage.textContent = '';
        const email = authEmail.value.trim();
        const password = authPassword.value.trim();
        if (!email || !password) {
            authMessage.textContent = '–í–≤–µ–¥–∏—Ç–µ –ø–æ—á—Ç—É –∏ –ø–∞—Ä–æ–ª—å –¥–ª—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏';
            return;
        }
        try {
            await createUserWithEmailAndPassword(auth, email, password);
            authMessage.textContent = '–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–∞, –≤—ã –≤–æ—à–ª–∏.';
            authMessage.classList.remove('auth-error');
            authMessage.classList.add('auth-ok');
        } catch (err) {
            authMessage.classList.remove('auth-ok');
            authMessage.classList.add('auth-error');
            authMessage.textContent = '–û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏: ' + (err.message || '');
        }
    });

    logoutBtn.addEventListener('click', async () => {
        await signOut(auth);
    });

    // ====== –õ–û–ö–ê–õ–¨–ù–û–ï –•–†–ê–ù–ò–õ–ò–©–ï (–ü–û–ö–ê –ß–¢–û) ======

    function storageKey() {
        return currentUser ? `tasks_${currentUser.uid}` : 'tasks_guest';
    }

    function loadTasksForUser() {
        const stored = localStorage.getItem(storageKey());
        if (stored) {
            tasks = JSON.parse(stored);
        } else {
            tasks = [];
        }
        renderTasksWithSort(getFilteredTasks());
    }

    function saveTasks() {
        localStorage.setItem(storageKey(), JSON.stringify(tasks));
    }

    // ====== –õ–û–ì–ò–ö–ê –ó–ê–î–ê–ß (—É–ø—Ä–æ—â—ë–Ω–Ω–æ, –±–µ–∑ –º–æ–¥–∞–ª–∫–∏) ======

    const searchBox = document.getElementById('searchBox');
    const addTaskBtn = document.getElementById('addTaskBtn');

    addTaskBtn.addEventListener('click', () => {
        const name = prompt('–ù–∞–∑–≤–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏:');
        if (!name) return;
        const newTask = {
            id: Date.now(),
            name,
            status: 'not-started',
            priority: 'low',
            deadline: '',
            budget: 0,
            payment: 'awaiting',
        };
        tasks.push(newTask);
        saveTasks();
        renderTasksWithSort(getFilteredTasks());
    });

    function editTask(id) {
        const task = tasks.find(t => t.id === id);
        if (!task) return;
        const newName = prompt('–ù–æ–≤–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏:', task.name);
        if (!newName) return;
        task.name = newName;
        saveTasks();
        renderTasksWithSort(getFilteredTasks());
    }

    function deleteTask(id) {
        if (!confirm('–£–¥–∞–ª–∏—Ç—å –∑–∞–¥–∞—á—É?')) return;
        tasks = tasks.filter(t => t.id !== id);
        saveTasks();
        renderTasksWithSort(getFilteredTasks());
    }

    function updateTask(id, field, value) {
        const task = tasks.find(t => t.id === id);
        if (!task) return;
        task[field] = value;
        saveTasks();
        renderTasksWithSort(getFilteredTasks());
    }

    function getDeadlineColor(deadline) {
        if (!deadline) return 'transparent';
        const today = new Date();
        const d = new Date(deadline);
        const daysLeft = Math.ceil((d - today) / (1000 * 60 * 60 * 24));
        if (daysLeft <= 3 && daysLeft > 0) return 'rgba(255,152,0,0.15)';
        if (daysLeft <= 0) return 'rgba(255,61,0,0.15)';
        return 'transparent';
    }

    function renderTasks(tasksToShow = tasks) {
        const list = document.getElementById('tasksList');
        const html = tasksToShow.map(task => `
            <div class="task-card">
                <div class="task-header">
                    <div class="task-name">${task.name}</div>
                    <div class="task-actions">
                        <span class="icon" title="–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å"
                              onclick="window._editTask(${task.id})">‚úèÔ∏è</span>
                        <span class="icon" title="–£–¥–∞–ª–∏—Ç—å"
                              onclick="window._deleteTask(${task.id})">üóëÔ∏è</span>
                    </div>
                </div>
                <div class="task-details">
                    <div class="task-field">
                        <span class="field-label">–°—Ç–∞—Ç—É—Å</span>
                        <span class="field-value">
                            <select class="editable-select"
                                onchange="window._updateTask(${task.id}, 'status', this.value)">
                                <option value="not-started" ${task.status === 'not-started' ? 'selected' : ''}>–ù–µ –Ω–∞—á–∞—Ç–æ</option>
                                <option value="in-progress" ${task.status === 'in-progress' ? 'selected' : ''}>–ù–∞—á–∞—Ç–æ</option>
                                <option value="ready" ${task.status === 'ready' ? 'selected' : ''}>–ì–æ—Ç–æ–≤–æ</option>
                            </select>
                        </span>
                    </div>
                    <div class="task-field">
                        <span class="field-label">–ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç</span>
                        <span class="field-value">
                            <select class="editable-select"
                                onchange="window._updateTask(${task.id}, 'priority', this.value)">
                                <option value="low" ${task.priority === 'low' ? 'selected' : ''}>–ù–∏–∑–∫–∏–π</option>
                                <option value="high" ${task.priority === 'high' ? 'selected' : ''}>–í—ã—Å–æ–∫–∏–π</option>
                            </select>
                        </span>
                    </div>
                    <div class="task-field">
                        <span class="field-label">–°—Ä–æ–∫</span>
                        <span class="field-value">
                            <input type="date" class="editable-input" value="${task.deadline}"
                                   onchange="window._updateTask(${task.id}, 'deadline', this.value)"
                                   style="background-color:${getDeadlineColor(task.deadline)};">
                        </span>
                    </div>
                    <div class="task-field">
                        <span class="field-label">–ë—é–¥–∂–µ—Ç</span>
                        <span class="field-value">
                            <input type="number" class="editable-input" value="${task.budget}"
                                   onchange="window._updateTask(${task.id}, 'budget', parseInt(this.value)||0)">
                        </span>
                    </div>
                    <div class="task-field">
                        <span class="field-label">–û–ø–ª–∞—Ç–∞</span>
                        <span class="field-value">
                            <select class="editable-select"
                                onchange="window._updateTask(${task.id}, 'payment', this.value)">
                                <option value="awaiting" ${task.payment === 'awaiting' ? 'selected' : ''}>–û–∂–∏–¥–∞–µ—Ç</option>
                                <option value="paid" ${task.payment === 'paid' ? 'selected' : ''}>–û–ø–ª–∞—á–µ–Ω–æ</option>
                            </select>
                        </span>
                    </div>
                </div>
            </div>
        `).join('');
        list.innerHTML = html;
        updateTotalBudget();
    }

    function updateTotalBudget() {
        const total = tasks.reduce((sum, t) => sum + (t.budget || 0), 0);
        document.getElementById('totalBudget').textContent =
            total.toLocaleString('ru-RU') + ' –†';
    }

    function getFilteredTasks() {
        const q = (searchBox.value || '').toLowerCase();
        return tasks.filter(t => t.name.toLowerCase().includes(q));
    }

    searchBox.addEventListener('input', () => {
        renderTasksWithSort(getFilteredTasks());
    });

    function sortTasks(field) {
        currentSort = currentSort === field ? null : field;
        document.querySelectorAll('.sort-btn').forEach(btn => btn.classList.remove('active'));
        if (currentSort) {
            const map = { deadline: 0, priority: 1, budget: 2, payment: 3 };
            document.querySelectorAll('.sort-btn')[map[currentSort]].classList.add('active');
        }
        renderTasksWithSort(getFilteredTasks());
    }

    function getSortedTasks(arr) {
        if (!currentSort) return arr;
        const sorted = [...arr];
        if (currentSort === 'deadline') {
            sorted.sort((a,b) => {
                if (!a.deadline) return 1;
                if (!b.deadline) return -1;
                return new Date(a.deadline) - new Date(b.deadline);
            });
        } else if (currentSort === 'priority') {
            const order = { high: 0, low: 1 };
            sorted.sort((a,b) => order[a.priority] - order[b.priority]);
        } else if (currentSort === 'budget') {
            sorted.sort((a,b) => b.budget - a.budget);
        } else if (currentSort === 'payment') {
            const order = { awaiting: 0, paid: 1 };
            sorted.sort((a,b) => order[a.payment] - order[b.payment]);
        }
        return sorted;
    }

    function renderTasksWithSort(arr) {
        renderTasks(getSortedTasks(arr));
    }

    // –ü—Ä–æ–±—Ä–æ—Å —Ñ—É–Ω–∫—Ü–∏–π –≤ –≥–ª–æ–±–∞–ª—å–Ω—ã–π scope –¥–ª—è onclick –≤ —à–∞–±–ª–æ–Ω–µ
    window._editTask = editTask;
    window._deleteTask = deleteTask;
    window._updateTask = updateTask;
</script>
</body>
</html>
