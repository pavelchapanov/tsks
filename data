            font-size: 13px;
        }

        .task-actions {
            display: flex;
            gap: var(--space-4);
        }

        .icon {
            width: 18px;
            height: 18px;
            font-size: 16px;
            cursor: pointer;
            opacity: 0.6;
        }

        .icon:hover { opacity: 1; }

        .task-details { display: flex; flex-direction: column; }

        .task-field {
            display: flex;
            font-size: 12px;
            border-bottom: 1px solid rgba(94, 82, 64, 0.08);
        }

        .task-field:last-child { border-bottom: none; }

        .field-label {
            width: 80px;
            padding: var(--space-4) var(--space-8);
            background-color: #f8f8f8;
            border-right: 1px solid var(--color-border);
            font-size: 11px;
            color: var(--color-text-secondary);
        }

        .field-value {
            flex: 1;
            padding: var(--space-4) var(--space-8);
        }

        .editable-select,
        .editable-input {
            width: 100%;
            padding: var(--space-4) var(--space-6);
            border-radius: var(--radius-base);
            border: 1px solid var(--color-primary);
            font-size: 12px;
            text-align: center;
        }

        input[type="date"] {
            width: 100%;
            padding: var(--space-4) var(--space-6);
            border-radius: var(--radius-base);
            border: 1px solid var(--color-primary);
            font-size: 12px;
            text-align: center;
        }

        .total-budget {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: var(--color-gray-200);
            border-top: 1px solid var(--color-border);
            padding: var(--space-10);
            text-align: center;
            font-weight: 600;
        }

        /* –ú–æ–¥–∞–ª–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è/—Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –∑–∞–¥–∞—á–∏ –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ø–æ–∑–∂–µ, —Å–µ–π—á–∞—Å —É–ø—Ä–æ—â—ë–Ω–Ω–æ */
    </style>
