        }

        .btn-primary {
            background-color: var(--color-primary);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--color-primary-hover);
        }

        .btn-ghost {
            background-color: transparent;
            color: var(--color-text-secondary);
            border: 1px solid var(--color-border);
        }

        .auth-error {
            margin-top: var(--space-4);
            font-size: 11px;
            color: #b91c1c;
        }

        .auth-ok {
            color: #15803d;
        }

        @media (max-width: 480px) {
            .auth-form {
                flex-direction: column;
                align-items: stretch;
            }
        }

        /* ====== –¢–£–õ–ë–ê–† –ò –ö–ê–†–¢–û–ß–ö–ò –ó–ê–î–ê–ß (–∫–∞–∫ —Ä–∞–Ω—å—à–µ, –∫—Ä–∞—Ç–∫–æ) ====== */

        .toolbar {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            column-gap: var(--space-6);
            row-gap: 8px;
            margin-bottom: var(--space-12);
        }

        .search-box,
        .btn-toolbar,
        .sort-btn {
            padding: 4px 10px;
